<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <link rel="stylesheet" type="text/css" href="css.css">

  <title>Node File Uploads</title>
</head>
<body>
  <div class="container">
    <h1>File Upload</h1>
    <%= typeof message != 'undefined' ? message : '' %>
    <form action="/update" method="POST" enctype="multipart/form-data">
      <div class="file-field input-field">
        <div class="btn grey">
          <span>File</span>
          <input name="myImage" type="file">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <textarea type="text" name="task"></textarea>

      <button type="submit" class="btn">Submit</button>
    </form>
    <br>



    <ul>
        <% for(var image of images) { %>
        <li>
            <img src="<%=  '/uploads/' + image.name %>" alt="Show" class="responsive-img"/>
        </li>
       
      <li><%=  '/uploads/' + image.name %></li>
      <li><%=  '/uploads/' + image.description %></li>
      <button data-movieid="<%= image.id %>" class="delmovie">Delete</button>
     
      <h2>Update a Movie</h2>
      <form id="updatemovie" class="button-size">
        <input type="text" name="id" placeholder="<%= image.id %>">
        <textarea type="text" name="movie" placeholder="what do you want to update this movie title to?"></textarea>
        <button type="submit">Update Movie!</button>
      </form>
    

      <% } %>
    </ul>

      




    <!-- code below makes the image be responsive using syntax used in materialized classes since I used that instead of bootstrap -->
    <img src="<%= typeof file != 'undefined' ? file : '' %>" class="responsive-img">
  </div>



  <!-- <form action="/" method="POST">
    <textarea type="text" name="task"></textarea>
  
    <button type="submit">Submit</button>
  </form> -->
  

  <script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>  
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>




  <script type="text/javascript">




 $("#updatemovie").on("submit", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    var id = $("[name=id]").val().trim();

    var updatedMovie = {
      movie: $("#updatemovie [name=movie]").val().trim()
    };

    // Send the PUT request.
    $.ajax("/api/filess/" + id, {
      type: "PUT",
      data: updatedMovie
    }).then(
      function() {
        console.log("updated id ", id);
        // Reload the page to get the updated list
        location.reload(true);
      }
    );
  });



  


    $(".delmovie").on("click", function(event) {
      var id = $(this).data("movieid");
  
      // Send the DELETE request.
      $.ajax("/api/file/" + id, {
        type: "DELETE"
      }).then(
        function() {
          console.log("deleted id ", id);
          // Reload the page to get the updated list
          location.reload(true);

        }
      );
    });
  </script>




</body>
</html>